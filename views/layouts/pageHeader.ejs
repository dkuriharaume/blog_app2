<% if (locals.postPage && postPage == true){ %>
<header class="masthead" style="background-image: url('<%= bgImage %>')">
<% } else { %>
<header class="masthead" style="background-image: url('/assets/img/<%= bgImage %>')">
<% } %>
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1><%= pageHeaderH1 %></h1>
                    <% if(locals.postPage && postPage == true) { %>
                        <span class="meta">
                            Posted by
                            <% if(locals.postAuthorName) { %>
                                <%= postAuthorName %>
                            <% } else { %>
                            <span>Start Bootstrap</span>
                            <% } %>
                            on <% if(locals.postDate) { %>
                                <%= postDate %>
                            <% } else { %>
                            unknown date
                            <% } %>
                        </span>
                    <% } else { %>
                        <span class="subheading"><%= pageHeaderSub %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>
