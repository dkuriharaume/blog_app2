<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/head') %>
    <body>
        <%- include('layouts/navbar') %>
        <%- include('layouts/pageHeader') %>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="my-5">
                            <form id="loginForm" action="/auth/user" method="POST">
                                <div class="form-floating">
                                    <input class="form-control" id="username_login" name="username" type="text" placeholder="Enter username" />
                                    <label for="username_login">Username</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="password_login" name="password" type="password" placeholder="Enter password" />
                                    <label for="password_login">Password</label>
                                </div>
                                <button class="mt-4 btn btn-primary text-uppercase" id="submitButton_login" type="submit">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('layouts/footer') %>
        <%- include('layouts/scripts') %>
    </body>
</html>
